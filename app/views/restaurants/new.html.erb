<%= simple_form_for @restaurant do |f| %>
<div class="row justify-content-center">
  <div class="col-6 justify-content-center">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"]%>
    <%= f.submit %>
  </div>
</div>
<br>
<%= link_to "Back to restaurants page", restaurants_path%>
<% end %>
